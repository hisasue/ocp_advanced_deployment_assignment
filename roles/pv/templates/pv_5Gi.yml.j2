apiVersion: v1
kind: PersistentVolume
metadata:
  name: "pv{{item}}"
  labels:
    name: initial-pv
spec:
  capacity:
    storage: 5Gi
  accessModes:
  - ReadWriteOnce
  nfs:
    path: "/srv/nfs/user-vols/pv{{item}}"
    server: "support1.{{guid}}.internal"
  persistentVolumeReclaimPolicy: Recycle





